<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mygithubappsfix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGithubAppsFix">
        <activity
            android:name=".user_interface.favorite.FavoriteActivity"
            android:exported="true" />
        <activity
            android:name=".user_interface.menu.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".user_interface.detail.UserDetailActivity"
            android:exported="true" />
        <activity
            android:name=".user_interface.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>